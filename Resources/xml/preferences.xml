<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


  <PreferenceCategory
    app:iconSpaceReserved="false"
    android:title="@string/setting_theme">

    <SwitchPreference
     android:key="dark_mode"
    app:iconSpaceReserved="false"
     android:persistent="true"
     android:title="@string/setting_dark_theme" />

  </PreferenceCategory>

  <PreferenceCategory
  app:iconSpaceReserved="false"
  android:title="@string/setting_about">

    <Preference
      app:key="setting_version"
      app:title="@string/setting_version"
      app:summary="1.0.0"
      app:iconSpaceReserved="false"/>

    <Preference
        app:key="setting_developer"
        app:title="@string/setting_developer"
        app:summary="Wojciech Berdowski"
        app:iconSpaceReserved="false"/>

    <Preference
      app:key="setting_licenses"
      app:title="@string/setting_licenses"
      app:iconSpaceReserved="false"/>

  </PreferenceCategory>

</PreferenceScreen>