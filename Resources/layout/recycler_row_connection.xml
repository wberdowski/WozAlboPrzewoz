<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:visibility="gone"
        android:id="@+id/textViewHeader"
        android:text="Header"
        android:padding="8dp"
        android:textSize="14dp"
        android:textAlignment="center"
        android:textColor="@color/colorTextLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/statusIndicator"
                android:background="@color/colorStatusDim"
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:minWidth="90dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textViewTime"
                            android:text="00:00"
                            android:textSize="28dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextStandard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/textViewMin"
                            android:text="min"
                            android:visibility="gone"
                            android:textSize="12dp"
                            android:layout_marginLeft="2dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextStandard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewStatus"
                        android:text="Status"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginRight="8dp">

                            <ImageView
                                android:layout_marginTop="1dp"
                                android:id="@+id/imageViewTrain"
                                android:src="@drawable/train_24px"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:tint="@color/colorTextStandard"/>

                            <TextView
                                android:id="@+id/textViewLine"
                                android:text="ABC"
                                android:textStyle="bold"
                                android:textSize="14dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextStandard"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textViewDestination"
                            android:textColor="@color/colorTextStandard"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="8dp"
                            android:minLines="2"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:text="Example Station\nText Here"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textViewTime1"
                            android:text="00:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:paddingVertical="1dp"
                            android:paddingHorizontal="2dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@drawable/time_badge_bg"/>

                        <TextView
                            android:id="@+id/textViewInfo"
                            android:text="Test"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintLeft_toRightOf="@id/textViewTime1"
                            app:layout_constraintRight_toLeftOf="@id/textViewTime2"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textColor="@color/colorTextLight"
                            android:textSize="14dp"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/textViewTime2"
                            android:text="00:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:paddingVertical="1dp"
                            android:paddingHorizontal="2dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@drawable/time_badge_bg"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>