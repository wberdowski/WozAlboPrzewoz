<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:visibility="gone"
        android:id="@+id/textViewHeader"
        android:text="Header"
        android:padding="8dp"
        android:textSize="14dp"
        android:textAlignment="center"
        android:textColor="@color/colorTextLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/statusIndicator"
                android:background="@color/colorStatusDim"
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:minWidth="78dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textViewTime"
                            android:text="00:00"
                            android:textSize="24dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextStandard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/textViewMin"
                            android:text="min"
                            android:visibility="gone"
                            android:textSize="12dp"
                            android:layout_marginLeft="2dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextStandard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewStatus"
                        android:text="Status"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minWidth="60dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:src="@drawable/train_24px"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:textColor="@color/colorTextStandard"/>

                        <TextView
                            android:id="@+id/textViewLine"
                            android:text="ABC"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:textColor="@color/colorTextStandard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewCarrier"
                        android:text="ABC"
                        android:textSize="14dp"
                        android:textColor="@color/colorTextStandard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/textViewDestination"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextStandard"
                        android:textSize="16dp"
                        android:text="Example Station"
                        android:scrollHorizontally="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:id="@+id/textViewTime1"
                            android:text="00:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:paddingVertical="1dp"
                            android:paddingHorizontal="2dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@drawable/time_badge_bg"/>

                        <TextView
                            android:id="@+id/textViewTime2"
                            android:text="00:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:paddingVertical="1dp"
                            android:paddingHorizontal="2dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@drawable/time_badge_bg"/>

                    </android.support.constraint.ConstraintLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>