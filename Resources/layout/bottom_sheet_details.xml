<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_peekHeight="48dp"
    android:elevation="8dp"
    android:background="@drawable/bottom_sheet_peek"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="4dp"
            android:background="@drawable/bottom_sheet_peek_handle">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/connection_details"
            android:layout_marginTop="4dp"
            android:textSize="14dp"
            android:textColor="?attr/textColorFaint"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="?android:attr/windowBackground"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:theme="@style/DialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Utrudnienia"/>

        <TextView
            android:id="@+id/textViewDifficulties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEXT"
            android:textColor="?attr/textColor"
            android:textSize="16dp"/>

    </LinearLayout>

</LinearLayout>